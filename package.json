{
  "name": "lynxget",
  "version": "0.1.0",
  "description": "Stealth fetch tool with Chrome TLS fingerprinting, smart content extraction, and bot detection awareness",
  "type": "module",
  "bin": {
    "lynxget": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run --exclude 'src/__tests__/e2e-*.test.ts'",
    "test:e2e": "vitest run --include 'src/__tests__/e2e-*.test.ts'",
    "test:e2e:fetch": "vitest run --include 'src/__tests__/e2e-fetch.test.ts'",
    "test:e2e:fetch:critical": "TEST_PRIORITY=critical vitest run --include 'src/__tests__/e2e-fetch.test.ts'",
    "test:e2e:fetch:quick": "TEST_PRIORITY=critical,important vitest run --include 'src/__tests__/e2e-fetch.test.ts'",
    "test:e2e:all": "tsx scripts/test-fetch-vs-curl.ts",
    "report:fetch": "tsx scripts/generate-fetch-e2e-report.ts",
    "report:curl": "tsx scripts/generate-curl-report.ts",
    "report:fetch-vs-curl": "tsx scripts/generate-fetch-vs-curl-report.ts"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "dotenv": "^17.2.3",
    "httpcloak": "^1.5.10",
    "linkedom": "^0.18.12",
    "pino": "^10.2.0",
    "unfluff": "^3.2.0",
    "zod": "^4.3.5"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "fetch",
    "scraping",
    "tls-fingerprint",
    "antibot",
    "content-extraction",
    "readability",
    "stealth",
    "web-scraping"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/teng-lin/lynxget.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "better-sqlite3": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  }
}
